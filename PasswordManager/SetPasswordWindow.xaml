<Window x:Class="PasswordManagerWPF.SetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Set Main Password" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Enter a new main password:"/>
            <PasswordBox x:Name="NewPasswordBox" Width="200" Margin="0,10,0,0"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Width="200" Margin="0,10,0,0"/>
            <Button Content="Set Password" Click="SetPassword_Click" Margin="10" Width="200"/>
        </StackPanel>
    </Grid>
</Window>
