<Window x:Class="PasswordManagerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Enter your main password:"/>
            <PasswordBox x:Name="MainPasswordBox" Width="200"/>
            <Button Content="Login" Click="Login_Click" Margin="10" Width="200"/>
        </StackPanel>
    </Grid>
</Window>
