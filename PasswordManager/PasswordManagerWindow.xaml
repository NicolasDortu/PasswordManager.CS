<Window x:Class="PasswordManagerWPF.PasswordManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password Manager" Height="350" Width="600">
    <Grid>
        <StackPanel Margin="10">
            <Button Content="Generate a new password" Click="GeneratePassword_Click" Width="200"/>
            <Button Content="View stored passwords" Click="ViewPasswords_Click" Width="200"/>
            <ListBox x:Name="PasswordListBox" Height="200" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
